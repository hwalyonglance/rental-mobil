{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"project": {
		"name": "pp2"
	},
	"apps": [
		{
			"root": "client",
			"outDir": "dist/public",
			"assets": [
				"assets",
				"uploads",
				"favicon.ico",
				"manifest.appcache",
				"manifest.json",
				"manifest.webapp",
				"offline.html",
				"robots.txt",
				"sw.js",
				{
					"glob": "workbox-sw.prod.*",
					"input": "../../node_modules/workbox-sw/build/importScripts/",
					"output": "./"
				}
			],
			"index": "index.html",
			"main": "main.browser.ts",
			"polyfills": "polyfills.ts",
			"tsconfig": "tsconfig.app.json",
			"prefix": "pp2",
			"serviceWorker": false,
			"styles": [
				"styles.scss"
			],
			"scripts": [
				"../node_modules/socket.io-client/dist/socket.io.js",
				"../node_modules/socketio-file-upload/client.min.js",
				"assets/js/jquery-3.2.1.min.js",
				"assets/materialize/materialize.min.js"
			],
			"environmentSource": "environments/environment.ts",
			"environments": {
				"dev": "environments/environment.ts",
				"prod": "environments/environment.prod.ts"
			}
		},
		{
			"name": "server",
			"platform": "server",
			"root": "client",
			"outDir": "server",
			"main": "main.server.ts",
			"tsconfig": "tsconfig.server.json",
			"prefix": "pp2",
			"environmentSource": "environment/environment.ts",
			"environments": {
				"dev": "environment.environment.ts",
				"prod": "environment.environment.prod.ts"
			}
		}
	],
	"defaults": {
		"build": {
			"deleteOutputPath": false,
			"commonChunk": false,
			"outputHashing": "none"
		},
		"class": {
			"spec": false
		},
		"component": {
			"inlineStyle": true,
			"inlineTemplate": false,
			"spec": false
		},
		"directive": {
			"spec": false
		},
		
		"guard": {
			"spec": false
		},
		"module": {
			"spec": false
		},
		"pipe": {
			"spec": false
		},
		"service": {
			"spec": false
		},
		"styleExt": "scss"
	}
}
